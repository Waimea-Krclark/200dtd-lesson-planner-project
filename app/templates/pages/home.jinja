{#=====================================================
  Home page
  - Week display
  - Lists lessons for each day
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Lesson Planner

{% endblock %}


{% block content %}

    <article class="weekViewer">
        {% for day in days %}

            <article class="dayArticle" onclick="location.href='/day/{{ day.code }}'">
                <h2>
                    <span class="dayShort">{{ day.code | capitalize  }}</span>
                    <span class="dayLong">{{ day.name  }}</span>
                </h2>
                {% for lesson in lessons %}

                    {% if lesson.day_code == day.code %}

                        <p class="lessonDisplay">
                            <span class="lessonTime">{{ lesson.time | nicetime }}</span> 
                            <span class="lessonName">{{ lesson.name }}</span>
                        </p>

                    {% endif %}

                {% else %}
 
                    <p>No Lessons</p>  

                {% endfor %}
            </article>

        {% else %}

            <p>None!</p>

        {% endfor %}

    </article>

{% endblock %}

