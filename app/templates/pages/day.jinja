{#=====================================================
  Thing page
  - Shows details of a single thing
  - Has a delete link to remove it
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - Single Thing

{% endblock %}


{% block content %}
    
    {% for retrieved in day %}

        <section id="DayHeader">
            <h1>{{ retrieved.date }}</h1>
            <h1>{{ retrieved.name }}</h1>
        </section>
    
    {% else %}

        <p>Error retrieving day</p>
    
    {% endfor %}
    
    <article>   
        {% for lesson in lessons %}      

            <button id="{{ lesson.id }}" class="dropbtn" onclick='dropdown({{ lesson.id }})'>
                {{ lesson.time }} {{ lesson.name }} <img src="/static/images/dropdown-arrow.svg" alt="Dropdown arrow" id="{{ lesson.id }}" class="dropdownarrow">
            </button>

            <article id="{{ lesson.id }}" class="DropdownCollapsed">
                {{ lesson.description }}
                Resources:
                <ul>
                    {% for resource in resources %}
                        {% if resource.lesson_id == lesson.id %}    
                            <li>
                                <a href="{{ resource.link }}"> {{ resource.name }}</a>
                            </li>
                            
                        {% endif %}
                    {% else %}
                        <p>No Lessons</p>      
                    {% endfor %}
                    <a href="/resources/">View all</a>
                </ul>
            </article>
        
        {% else %}

            <p>None!</p>
        
        {% endfor %}
    </article>


{% endblock %}

